# Server Configuration
SERVER_PORT=8080
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:8080
EXPO_PUBLIC_WS_URL=ws://localhost:8080

# Desktop App
ELECTRON_API_URL=http://localhost:8080
ELECTRON_WS_URL=ws://localhost:8080

# Development
NODE_ENV=development
DEBUG=false

# Push Notifications (Firebase)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MESSAGING_SENDER_ID=your-firebase-sender-id
FIREBASE_PROJECT_ID=your-firebase-project-id

# Optional Features
ENABLE_VOICE_CALLS=false
ENABLE_VIDEO_CALLS=false
ENABLE_GROUP_CHATS=false
ENABLE_FILE_SHARING=false 